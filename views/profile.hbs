<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/feed.css">
    <link rel="stylesheet" href="/styles/homepage.css">
    <link rel="stylesheet" href="/styles/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="top-bar">
        <div class="first"><a href="/profile">{{user.username}}</a></div>
        <div class="second"><a href="/homepage"><i class="fa-solid fa-house"></i>HomePage</a></div>
    </div>

    {{!-- {{user}} --}}
    {{!-- {{user._id}} --}}
    {{!-- {{userPosts}} --}}
    <div class="profile-details">
        <div class="profileimg">
            <img src={{user.google_img}} alt="Google Image" class="profilepic">
        </div>
        <div class="left">
            <div class="profilename">
                Welcome {{user.username}} <br>

            </div>
        </div>

        <div class="right">
            {{#if isLoggedIn}}
            <div class="logout">
                <a href="/logout">Logout</a>
            </div>
            {{/if}}
        </div>
    </div>


    <div class="big-container">
        {{#each userPosts as |p|}}

        {{!-- {{p}} --}}
        {{!-- {{p.likes}} --}}
        {{!-- {{userdetails}} --}}
        {{!-- <if {{p.likes.include(user._id)}}>
            Hello How are you
        </if> --}}
        <div class="container-details">
            {{!-- <input type="text" name="id" class="{{p._id}}" style="width: 200px;" value="{{p._id}}"> --}}
            <div class="user-details">
                <div class="profile-image" style="background-image: url({{p.username.google_img}});">
                </div>
                <div class="name-user" id="nameuser">{{p.username.username}} <div class="date">{{p.date}}</div>
                </div>
            </div>

            <div class="tweet-info">
                <div class="tweet-text">
                    {{p.tweet}}
                </div>
            </div>
            {{#if p.image}}
            <div class="media image">
                <img src="{{p.image}}" alt="">
            </div>
            {{/if}}
            <div class="icon-container">
                <div class="icon-div love"><button class="icon love">
                        {{!-- {{#if (p.likes.includes user._id) }} --}}
                        {{!-- <i onclick="addLike('{{p._id}}')" class="fa-solid fa-heart love"></i> --}}
                        {{!-- {{else}} --}}


                        {{#if p.hasLiked}}

                        <i onclick="addLike('{{p._id}}')" class="fa-solid fa-heart love"></i>
                        {{else}}
                        <i onclick="addLike('{{p._id}}')" class="fa-regular fa-heart love"></i>

                        {{/if}}

                        <span id="{{p._id}}">{{p.totallikes}}</span>
                    </button>
                </div>
                <div class="icon-div comment"><button class="icon comment commentBtn ">
                        <i onclick="
                                openCommentModal('{{p._id}}')" class="fa-regular fa-comment comment"
                            id="{{p._id}}"></i>
                        <span id="{{p._id}}">{{p.totalcomments}}</span>
                    </button>

                    <!-- Modal -->
                    <div id="commentModal{{p._id}}" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <span class="close" onclick="closeCommentModal('{{p._id}}')">&times;</span>
                            <div class="comments">
                                {{#each p.comments as |c|}}
                                <div class="newcomment">{{c}}</div>
                                {{/each}}
                            </div>
                            <form action="/addComment" method="POST">
                                <input type="hidden" name="postID" class="{{p._id}}" style="width: 200px;"
                                    value="{{p._id}}">
                                <input type="text" placeholder="Add Comment" name="comment">
                                <button type="submit">Daaldo Comment</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="icon-div bookmark"><button class="icon bookmark">
                        <i onclick="addSave('{{p._id}}')" class="fa-regular fa-bookmark bookmark" id="{{p._id}}"></i>
                        <span id="{{p._id}}">{{p.totalsaved}}</span>
                    </button></div>
                <a href="/deleteTweet?pid={{p._id}}" class="deletelink"><i class="fa-solid fa-trash"></i></a>

            </div>
        </div>


        {{/each}}
    </div>


    <br>


</body>

</html>