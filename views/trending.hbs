<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/feed.css">
    <link rel="stylesheet" href="/styles/homepage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        {{>navbar}}




        <!-- box-2 -->

        <div class="box-2">
            

            <div class="tweet">
                <div class="add-tweet-form">
                    <a href="/profile">
                        <div class="profile-image" style="background-image: url({{user.google_img}});"></div>
                    </a>

                    <div class="tweetdetails">
                        <form action="/addtweet" method="POST" enctype="multipart/form-data" autocomplete="off">
                            <textarea type="text" placeholder="Aur Batao? Kya chal raha hai?!" name="tweet"
                                class="input-tweet" maxlength="150"></textarea> <br>
                            <div class="custom-file-input">
                                <input type="file" id="fileInput" name="image" class="hidden" />
                                <label for="fileInput" class="file-label">
                                    <i class="fa-solid fa-image inputicon"></i>
                                </label>
                            </div>
                            <div class="submitbtn">
                                <button type="submit" class="submit">Post</button>
                            </div>
                            
                        </form>
                    </div>
                    <div class="reactions">

                    </div>

                </div>

            </div>
            <div class="main-content">
                {{!-- {{userdetails}}
                {{#each userdetails.likedPosts}}
                {{this}}
                {{/each}} --}}

                {{#each trendingPosts as |p|}}
                {{!-- {{p}} --}}
                {{!-- google:{{p.username.google_img}} --}}
                {{!-- {{p.likes}} --}}
                {{!-- {{userdetails}} --}}
                {{!-- <if {{p.likes.include(user._id)}}>
                    Hello How are you
                </if> --}}
                <div class="container-details">
                    {{!-- <input type="text" name="id" class="{{p._id}}" style="width: 200px;" value="{{p._id}}"> --}}
                    <div class="user-details">
                        <div class="profile-image" style="background-image: url({{p.username.google_img}});">
                        </div>
                        <div class="name-user" id="nameuser">{{p.username.username}} <div class="date">{{p.date}}</div>
                        </div>
                    </div>

                    <div class="tweet-info">
                        <div class="tweet-text">
                            {{p.tweet}}
                        </div>
                    </div>
                    {{#if p.image}}
                    <div class="media image">
                        <img src="{{p.image}}" alt="">
                    </div>
                    {{/if}}
                    <div class="icon-container">
                        <div class="icon-div love"><button class="icon love">
                                {{!-- {{#if (p.likes.includes user._id) }} --}}
                                {{!-- <i onclick="addLike('{{p._id}}')" class="fa-solid fa-heart love"></i> --}}
                                {{!-- {{else}} --}}


                                {{#if p.hasLiked}}

                                <i onclick="addLike('{{p._id}}')" class="fa-solid fa-heart love"></i>
                                {{else}}
                                <i onclick="addLike('{{p._id}}')" class="fa-regular fa-heart love"></i>

                                {{/if}}

                                <span id="{{p._id}}">{{p.totallikes}}</span>
                            </button>
                        </div>
                        <div class="icon-div comment"><button class="icon comment commentBtn ">
                            <a href="/getPostComment?pid={{p._id}}">
                                <i onclick="
                                openCommentModal('{{p._id}}'); " class="fa-regular fa-comment comment"
                                    id="{{p._id}}"></i>
                                    </a>
                                <span id="{{p._id}}">{{p.totalcomments}}</span>
                            </button>

                            
                        </div>

                        <div class="icon-div bookmark"><button class="icon bookmark">
                                <i onclick="addSave('{{p._id}}')" class="fa-regular fa-bookmark bookmark"
                                    id="{{p._id}}"></i>
                                <span id="{{p._id}}">{{p.totalsaved}}</span>
                            </button></div>

                    </div>
                </div>


                {{/each}}
            </div>
        </div>

        {{>sidebar}}

    </div>
    <script src="/scripts/script.js"></script>

    
</body>
</html>